<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkgcolor"
    tools:context=".Student_dashboard">

    <ImageView
        android:id="@+id/img1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordered_circle"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user" />
    <LinearLayout
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:fontFamily="@font/arima_madurai_medium"
            android:textAllCaps="true"
            android:textColor="@color/headings"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/answers"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No. : "
            android:textAllCaps="true"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/headings"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roll_no"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/answers"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch : "
            android:textAllCaps="true"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/headings"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/branch"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/answers"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year : "
            android:textAllCaps="true"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/headings"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/answers"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Taken : "
            android:fontFamily="@font/arima_madurai_medium"
            android:textAllCaps="true"
            android:textColor="@color/headings"
            android:textSize="20dp" />

        <Button
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IoT"
            android:fontFamily="@font/arima_madurai_medium"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_drop"
            android:spinnerMode="dropdown"></android.support.v7.widget.AppCompatSpinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:orientation="horizontal">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Register Courses"
        android:fontFamily="@font/arima_madurai_medium"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:id="@+id/register_courses"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arima_madurai_medium"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:id="@+id/register_device"
        android:text="Register Device"/>
    </LinearLayout>

</RelativeLayout>